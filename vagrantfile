Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"

  # Set up networking
  config.vm.network "private_network", ip: "192.168.56.10"

  # Define VM resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 1
  end

  # Provision the VM to install and configure NGINX with a custom web page
  config.vm.provision "shell", inline: <<-SHELL
    sudo apt-get update
    sudo apt-get install -y nginx
    sudo systemctl enable nginx
    sudo systemctl start nginx

    # Create a custom HTML page with Kyndryl Cloud Practice brand
    echo "<!DOCTYPE html>
    <html>
    <head>
      <title>Kyndryl Cloud Practice</title>
      <style>
        body {
          font-family: Arial, sans-serif;
          text-align: center;
          background-color: #d3d3d3; /* Grey Background */
          padding: 50px;
        }
        h1 {
          color: #333;
          font-size: 36px;
        }
        p {
          font-size: 20px;
          color: #555;
        }
      </style>
    </head>
    <body>
      <h1>Welcome to Kyndryl Cloud Practice</h1>
      <p>This web server is running inside a VirtualBox VM using Vagrant and GitHub Actions.</p>
    </body>
    </html>" | sudo tee /var/www/html/index.html > /dev/null

    # Restart NGINX to apply changes
    sudo systemctl restart nginx

    # Allow HTTP traffic
    sudo ufw allow 'Nginx HTTP'
  SHELL
end
